{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/ui": ["libs/shared/ui/src/index.ts"],
      "@shared/utils": ["libs/shared/utils/src/index.ts"],
      "@squad/players": ["libs/squad/players/src/index.ts"],
      "@squad/stats": ["libs/squad/stats/src/index.ts"],
      "@squad/tickets": ["libs/squad/tickets/src/index.ts"],
      "@store/merchandise": ["libs/store/merchandise/src/index.ts"],
      "@store/tickets": ["libs/store/tickets/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
